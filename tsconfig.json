{
  "compilerOptions": {
      "experimentalDecorators": true,
      "module": "commonjs",
      "target": "es6",
      "lib": ["ES2020"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "strict": true,
      "strictNullChecks": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "dist",
  },
  "include": ["src/"]
}